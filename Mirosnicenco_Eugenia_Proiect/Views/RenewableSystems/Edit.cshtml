@model Mirosnicenco_Eugenia_Proiect.Models.RenewableSystem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RenewableSystem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RenewableSystemId" />
            <div class="form-group">
                <label asp-for="HouseholdId" class="control-label"></label>
                <select asp-for="HouseholdId" class="form-control" asp-items="ViewBag.HouseholdId"></select>
                <span asp-validation-for="HouseholdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnergyProviderId" class="control-label"></label>
                <select asp-for="EnergyProviderId" class="form-control"
                        asp-items="@(ViewData["EnergyProviderId"] as SelectList)">
                    <option value="">-- Select Provider --</option>
                </select>
                <span asp-validation-for="EnergyProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemType" class="control-label"></label>
                <select asp-for="SystemType" class="form-control" asp-items="ViewBag.SystemType">
                    <option value="">-- Select System Type --</option>
                </select>
                <span asp-validation-for="SystemType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacityKW" class="control-label"></label>
                <input asp-for="CapacityKW" class="form-control" />
                <span asp-validation-for="CapacityKW" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstalationYear" class="control-label"></label>
                <input asp-for="InstalationYear" class="form-control" />
                <span asp-validation-for="InstalationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
