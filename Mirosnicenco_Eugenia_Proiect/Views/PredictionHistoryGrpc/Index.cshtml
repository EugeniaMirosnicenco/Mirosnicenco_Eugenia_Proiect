@model GrpcPredictionHistoryService.PredictionHistoryList

@{
    ViewData["Title"] = "Prediction History (gRPC)";
}

<h1>Prediction History (gRPC)</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="searchString" class="form-label">Find by Country:</label>
            <input type="text" name="searchString" id="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary btn-sm">Search</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Full List</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Country</th>
            <th>Household Size</th>
            <th>Income Level</th>
            <th>Urban / Rural</th>
            <th>Adoption Year</th>
            <th>Monthly Usage (kWh)</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item)
        {
            <tr>
                <td>@item.Country</td>
                <td>@item.HouseholdSize</td>
                <td>@item.IncomeLevel</td>
                <td>@item.UrbanRural</td>
                <td>@item.AdoptionYear</td>
                <td>@item.MonthlyUsageKWh</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
