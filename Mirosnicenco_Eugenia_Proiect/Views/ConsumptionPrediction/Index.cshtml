@model Mirosnicenco_Eugenia_Proiect.Models.ConsumptionPredictionViewModel

@{
    ViewData["Title"] = "Predict Monthly Energy Usage";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label>Country</label>
                <input asp-for="country" class="form-control" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Household Size</label>
                <input asp-for="household_Size" class="form-control" type="number" min="1" />
                <span asp-validation-for="household_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Income Level</label>
                <select asp-for="income_Level" class="form-control">
                    <option value="">--Select Income Level--</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
                <span asp-validation-for="income_Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Urban / Rural</label>
                <select asp-for="urban_Rural" class="form-control">
                    <option value="">--Select Urban/Rural--</option>
                    <option value="Urban">Urban</option>
                    <option value="Rural">Rural</option>
                </select>
                <span asp-validation-for="urban_Rural" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Adoption Year</label>
                <input asp-for="adoption_Year" class="form-control" type="number" min="1900" max="2100" />
                <span asp-validation-for="adoption_Year" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Predict</button>
        </form>
    </div>

    <div class="col-md-6">
        @if (Model.monthly_Usage_kWh > 0)
        {
            <div class="card mt-4">
                <div class="card-header">
                    Prediction Result
                </div>
                <div class="card-body">
                    <p>
                        <strong>Estimated Monthly Consumption:</strong>
                        @Model.monthly_Usage_kWh kWh
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
