@model IEnumerable<Mirosnicenco_Eugenia_Proiect.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="searchString" class="form-label">Find by Name:</label>
            <input type="text" name="searchString" id="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary btn-sm">Search</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Full List</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RegionSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Region</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["IncomeSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Average Income</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Region</td>
                <td>@item.AvgIncome</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CountryId" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CountryId" class="btn btn-outline-secondary btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CountryId" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
