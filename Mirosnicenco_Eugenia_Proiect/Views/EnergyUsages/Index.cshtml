@model IEnumerable<Mirosnicenco_Eugenia_Proiect.Models.EnergyUsage>

@{
    ViewData["Title"] = "Energy Usage";
}

<h1>Energy Usage</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="searchString" class="form-label">Find by Year:</label>
            <input type="text" name="searchString" id="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary btn-sm">Search</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Full List</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["YearSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Year</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ConsumptionSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Avg Monthly Consumption</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["HouseholdSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Household</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.AvgMonthlyConsumption</td>
                <td>@item.Household?.HouseholdId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EnergyUsageId" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EnergyUsageId" class="btn btn-outline-secondary btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EnergyUsageId" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
