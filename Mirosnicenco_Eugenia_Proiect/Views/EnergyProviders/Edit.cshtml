@model Mirosnicenco_Eugenia_Proiect.Models.EnergyProvider

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EnergyProvider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnergyProviderId" />
            <div class="form-group">
                <label asp-for="ProviderName" class="control-label"></label>
                <input asp-for="ProviderName" class="form-control" />
                <span asp-validation-for="ProviderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderType"></label>
                <select asp-for="ProviderType"
                        class="form-control"
                        asp-items="ViewBag.ProviderType">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GreenEnergyShare" class="control-label"></label>
                <input asp-for="GreenEnergyShare" class="form-control" type="number" min="0" max="100" step="0.01" />
                <span asp-validation-for="GreenEnergyShare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
